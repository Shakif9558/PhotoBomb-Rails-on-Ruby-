<p id="notice"><%= notice %></p>
<%= render "shared/navbar.status" %>
<h1>Listing Statuses</h1>

<table>
  <thead>
    <tr>
      <th>User Email</th>
      <th>User status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.user.email %></td>
        <td><%= status.user_status %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(Status) if Status.user.id == current_user.id %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_status_path %>
